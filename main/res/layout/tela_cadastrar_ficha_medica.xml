<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/background_login"
        tools:context=".CadastrarFichaMedica">

        <TextView
            android:id="@+id/txtTitulo"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:background="@color/vermelho_claro"
            android:textColor="@color/branco"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_layer_gradient"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txtCadastro"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:text="@string/Cadastro"
            android:textSize="20dp"
            android:textColor="@color/branco"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtNascimento"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/nascimento"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtPeso"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Peso"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtAltura"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Altura"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtDoencas"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Doencas"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtAlergias"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Alergias"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtSangue"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Sangue"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txtDoadorSangue"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:hint="@string/Doador_Sangue"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rdbDoadorSangueS"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/branco"
                        android:checked="true"
                        android:text="Sim"/>

                    <RadioButton
                        android:id="@+id/rdbDoadorSangueN"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:textStyle="bold"
                        android:textColor="@color/branco"
                        android:textSize="20dp"
                        android:checked="false"
                        android:text="Não" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/edtDoadorOrgaos"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:hint="@string/Doador_Orgao"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rdbDoadorOrgaosS"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/branco"
                        android:checked="true"
                        android:text="Sim"/>

                    <RadioButton
                        android:id="@+id/rdbDoadorOrgaosN"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:textStyle="bold"
                        android:textColor="@color/branco"
                        android:textSize="20dp"
                        android:checked="false"
                        android:text="Não" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtMedicamentos"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Alergico"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtMedicamentosTomados"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Medicamento"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtContatos"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/Contato"
                    android:textColorHint="@color/branco"
                    android:textColor="@color/branco"
                    android:textSize="20dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_button_normal"
                android:textSize="18dp"
                android:text="@string/btn_cadastrar"
                android:textAllCaps="false"
                android:textColor="@color/branco"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>